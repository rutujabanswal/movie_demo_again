<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/layout_harry"
    >

    <ImageView
        android:id="@+id/harry"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:padding="4dp"
        android:src="@drawable/harry"/>

    <TextView
        android:id="@+id/textViewTitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="25dp"
        android:layout_marginLeft="5dp"
        android:text="Harry Potter"
        android:foregroundGravity="center"
        android:layout_toRightOf="@id/harry"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/harry_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description: Harry Potter is a British-American film series based on the Harry Potter novels by author J. K. Rowling."
        android:textColor="#000000"
        android:textSize="20dp"
        android:visibility="visible"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/harry"
        android:layout_alignParentStart="true" />
</RelativeLayout>